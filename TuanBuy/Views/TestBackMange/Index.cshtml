</head>
@*中間內容變動區*@
<div class="content-inner w-100" id="navBar">
    <!-- Page Header儀錶板-->
    <header class="bg-white shadow-sm px-4 py-3 z-index-20">
        <div class="container-fluid px-0">
            <h2 class="mb-0 p-1">儀錶板</h2>
        </div>
    </header>
    <!-- Dashboard Counts Section-->
    <section class="pb-0">
        <div class="container-fluid">
            <div class="card mb-0">
                <div class="card-body">
                    <div class="row gx-5 bg-white">
                        <!-- 使用者 -->
                        <div class="col-xl-3 col-sm-6 py-4 border-lg-end border-gray-200">
                            <div class="d-flex align-items-center">
                                <div class="icon flex-shrink-0 bg-violet">
                                    <svg class="svg-icon svg-icon-sm svg-icon-heavy">
                                        <use xlink:href="#user-1"> </use>
                                    </svg>
                                </div>
                                <div class="mx-3">
                                    <h6 class="h4 fw-light text-gray-600 mb-3"><br>使用者</h6>
                                    <div class="progress" style="height: 4px">
                                        <div class="progress-bar bg-violet" role="progressbar" style="width: 25%; height: 4px;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                                <div class="number"><strong class="text-lg">{{manger.userCount}}</strong></div>
                            </div>
                        </div>
                        <!-- 處理中訂單 -->
                        <div class="col-xl-3 col-sm-6 py-4 border-lg-end border-gray-200">
                            <div class="d-flex align-items-center">
                                <div class="icon flex-shrink-0 bg-green">
                                    <svg class="svg-icon svg-icon-sm svg-icon-heavy">
                                        <use xlink:href="#numbers-1"> </use>
                                    </svg>
                                </div>
                                <div class="mx-3">
                                    <h6 class="h4 fw-light text-gray-600 mb-3"><br>商品總數</h6>
                                    <div class="progress" style="height: 4px">
                                        <div class="progress-bar bg-green" role="progressbar" style="width: 40%; height: 4px;" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                                <div class="number"><strong class="text-lg">{{manger.productCount}}</strong></div>
                            </div>
                        </div>
                        <!-- 商品總數-->
                        <div class="col-xl-3 col-sm-6 py-4 border-lg-end border-gray-200">
                            <div class="d-flex align-items-center">
                                <div class="icon flex-shrink-0 bg-red">
                                    <svg class="svg-icon svg-icon-sm svg-icon-heavy">
                                        <use xlink:href="#survey-1"> </use>
                                    </svg>
                                </div>
                                <div class="mx-3">
                                    <h6 class="h4 fw-light text-gray-600 mb-3">處理中<br>訂單</h6>
                                    <div class="progress" style="height: 4px">
                                        <div class="progress-bar bg-red" role="progressbar" style="width: 70%; height: 4px;" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                                <div class="number"><strong class="text-lg">{{manger.processOrder}}</strong></div>
                            </div>
                        </div>
                        <!-- 已處理完訂單 -->
                        <div class="col-xl-3 col-sm-6 py-4">
                            <div class="d-flex align-items-center">
                                <div class="icon flex-shrink-0 bg-orange">
                                    <svg class="svg-icon svg-icon-sm svg-icon-heavy">
                                        <use xlink:href="#list-details-1"> </use>
                                    </svg>
                                </div>
                                <div class="mx-3">
                                    <h6 class="h4 fw-light text-gray-600 mb-3">
                                        已完成<br>訂單
                                    </h6>
                                    <div class="progress" style="height: 4px">
                                        <div class="progress-bar bg-orange" role="progressbar" style="width: 50%; height: 4px;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                                <div class="number"><strong class="text-lg">{{manger.finishOrder}}</strong></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Dashboard Header Section    -->
    <section class="pb-0">
        <div class="container-fluid">
            <div class="row align-items-stretch">
                <!-- Statistics -->
                <div class="col-lg-3 col-12">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="icon flex-shrink-0 bg-red"><i class="fas fa-tasks"></i></div>
                                <div class="ms-3"><strong class="text-lg d-block lh-1 mb-1">234</strong><h5>營業總額</h5></div>
                            </div>
                        </div>
                    </div>
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="icon flex-shrink-0 bg-green"><i class="far fa-calendar"></i></div>
                                <div class="ms-3"><strong class="text-lg d-block lh-1 mb-1">152</strong><h5>暢銷商品</h5></div>
                            </div>
                        </div>
                    </div>
                    <div class="card mb-0">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="icon flex-shrink-0 bg-orange"><i class="far fa-paper-plane"></i></div>
                                <div class="ms-3"><strong class="text-lg d-block lh-1 mb-1">147</strong><small class="text-uppercase text-gray-500 small d-block lh-1">Forwards</small></div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Line Chart            -->
                <div class="col-lg-6 col-12">
                    <div class="card mb-0 h-100">
                        <div class="card-body">
                            <canvas id="lineCahrt"></canvas>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-12">
                    <!-- Bar Chart   -->
                    <div class="card">
                        <div class="card-body">
                            <strong class="h2 mb-0 d-block text-violet "style="display: inline!important">團主排行</strong><img class="trophy" style="display: inline!important" src="/img/payment/皇冠.png"width="30"/><small class="text-gray-500 small text-uppercase d-block mb-3">Current Server Uptime</small>
                            @*<canvas id="barChartHome"></canvas>*@
                            <div class="d-flex align-items-center"> 
                                <img src="~/img/payment/獎盃.png"/>@*<div  class="icon flex-shrink-0 bg-red"><i class="fas fa-tasks"></i></div>*@
                                <div class="ms-3 "><strong class="text-lg d-block lh-1 mb-1">234</strong><h5>營業總額</h5></div>
                            </div>
                            <div class="d-flex align-items-center trophy2">
                                <img src="/img/payment/第二名獎盃2.png"width="40" />@*<div class="icon flex-shrink-0 bg-red"><i class="fas fa-tasks"></i></div>*@
                                <div class="ms-3 ranking"style="margin-left:20px!important"><strong class="text-lg d-block lh-1 mb-1">234</strong><h5>營業總額</h5></div>
                            </div>
                            <div class="d-flex align-items-center trophy3"style="margin-left:2px;">
                                <img class="" src="/img/payment/第三名獎盃.png"width="45"/> @*<div class="icon flex-shrink-0 bg-red"><i class="fas fa-tasks"></i></div>*@
                                <div class="ms-3"style="margin-left:20px!important"><strong class="text-lg d-block lh-1 mb-1">234</strong><h5>營業總額</h5></div>
                            </div>
                        </div>
                    </div>
                    <!-- Numbers-->
                    <div class="card mb-0">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="icon flex-shrink-0 bg-green"><i class="fas fa-chart-area"></i></div>
                                <div class="ms-3"><strong class="text-lg mb-0 d-block lh-1">99.9%</strong><small class="text-gray-500 small text-uppercase">Success Rate</small></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<!-- JavaScript files-->
<script src="/BackMangeView/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="/BackMangeView/vendor/chart.js/Chart.min.js"></script>
<script src="/BackMangeView/vendor/just-validate/js/just-validate.min.js"></script>
<script src="/BackMangeView/vendor/choices.js/public/assets/scripts/choices.min.js"></script>
<script src="/BackMangeView/js/charts-home.js"></script>
<!-- Main File-->
<script src="/BackMangeView/js/front.js"></script>
<script>
    class Manger {
        finishOrder = 0;
        processOrder = 0;
        productCount = 0;
        userCount = 0;
    }
    var layout = new Vue({
        el: '#navBar',
        data: {
            homes: [],
            manger: new Manger(),
            user: "",
            picPath: ""
        },
        mounted: function () {
            let self = this;
            axios.get("/api/LoginAndRegister/")
                .then((resp) => {
                    self.user = resp.data;
                })
                .catch((res) => res.response.data);
            axios.get("/api/MemberCenter/")
                .then((resp) => { self.picPath = resp.data })
                .catch((res) => res.response.data);
            axios.get("/BackstageMange/Homeinformation")
                .then((resp) => {
                    /*self.homes = resp.data*/
                    layout.manger = resp.data;
                    console.log(layout.manger);
                })
                .catch((res) => res.response.data);
        },
        methods: {
            logout: function () {
                axios.delete("/api/LoginAndRegister").then(() => {
                    window.location.href = "/Home/Index";
                });
            },

        }

    });
</script>




